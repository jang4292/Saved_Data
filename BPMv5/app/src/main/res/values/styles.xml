<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="mw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- login style -->
    <style name="et_login_input" parent="mw">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:theme">@style/EditTheme</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--<style name="AppTheme.NoActionBar">-->
    <!--<item name="windowActionBar">false</item>-->
    <!--<item name="windowNoTitle">true</item>-->
    <!--</style>-->

    <style name="EditTheme" parent="AppTheme.NoActionBar">
        <item name="android:colorControlNormal">@color/textColor</item>
    </style>

    <style name="sign_up_button" parent="main_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_button_style">
        <item name="android:background">@drawable/ripple_effect_main_button</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ibtn_login">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ibtn_google" parent="ibtn_login">
        <item name="android:background">@drawable/ripple_effect_sns_icon</item>
        <!--<item name="android:src">@drawable/googleg_standard_color_18</item>-->
        <item name="android:scaleType">fitXY</item>
    </style>


    <style name="ibtn_kakao" parent="ibtn_login">
        <item name="android:background">@drawable/ripple_effect_sns_icon</item>
        <!--<item name="android:src">@drawable/kakao_account_logo</item>-->
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ibtn_naver" parent="ibtn_login">
        <item name="android:background">@drawable/naver_login_icon_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Light" />

    <!-- sign up style -->
    <style name="sign_up_label_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="sign_up_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:theme">@style/EditTheme</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>
