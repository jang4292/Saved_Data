<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="main_button_style">
        <item name="android:background">@drawable/ripple_effect_main_button</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/nanum_font_family</item>
    </style>

    <style name="side_button_style" parent="main_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>


    <style name="iv_exercise_icon">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/shape_circle</item>
    </style>
    
    <style name="ibtn_exercise_icon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!---->

    <style name="schedules_num_tv">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="schedules_label_tv">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textColor">@color/textColor</item>
    </style>


    <style name="play_num_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">36dp</item>
        <item name="android:fontFamily">@font/nanum_font_family</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="play_label_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/nanum_font_family</item>
        <item name="android:textStyle">normal</item>
    </style>



    <!-- schedules -->
    <style name="schedule_exercise_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">26dp</item>
        <item name="android:fontFamily">@font/nanum_font_family</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="schedule_num_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">34dp</item>
        <item name="android:fontFamily">@font/nanum_font_family</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="schedule_label_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/nanum_font_family</item>
        <item name="android:textStyle">normal</item>
    </style>



    <!-- number_picker -->
    <style name="number_picker_label_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_font_family</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>